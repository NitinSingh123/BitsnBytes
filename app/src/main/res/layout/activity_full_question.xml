<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.newapp.FullQuestionActivity"
    android:background="@color/colorGrey"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view_1"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/full_profile_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/avatar" />

            <TextView
                android:id="@+id/full_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/full_profile_image"
                android:layout_marginEnd="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginStart="15dp"
                android:text="eihiusdnc cjs d dc sdci insdcnd uisncksd c bdsckjbabc cuhabdjc ubsicnadajcbuhcj "
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/full_profile_image"
                android:layout_marginLeft="55dp"
                android:layout_marginStart="55dp"
                android:text="Question by"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/full_display_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView7"
                android:layout_alignStart="@+id/textView7"
                android:layout_below="@+id/textView7"
                android:text="Display Name"
                android:textColor="#000000" />

            <ImageButton
                android:id="@+id/full_answer"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/full_question"
                android:layout_marginStart="300dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="21dp"
                android:src="@mipmap/ic_launcher_answer"
                />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/full_answer"
                android:layout_alignStart="@+id/full_answer"
                android:layout_below="@+id/full_answer"
                android:text="Answer"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginStart="145dp"
                android:layout_marginTop="4dp"
                android:text="Posted on:"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/tv_full_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date and time"
                android:textSize="10sp"
                android:layout_marginStart="200dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="4dp"

                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_no_of_answers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="6dp"
        android:text="0"
        android:textSize="12dp"
        android:textColor="#000000"
        android:layout_below="@+id/card_view_1"
        />

    <TextView
        android:id="@+id/tv_full_answers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="6dp"
        android:text="ANSWERS"
        android:textSize="12dp"
        android:textColor="#000000"
        android:layout_below="@+id/card_view_1"

        />
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_full_answers"
        >

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/full_answer_list"
        android:paddingTop="2dp"
        >
    </android.support.v7.widget.RecyclerView>


    </RelativeLayout>



</RelativeLayout>
